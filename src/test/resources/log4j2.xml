<Configuration status="error">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%p] %c - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- Root Logger configuration -->
		<Root level="info">
			<Appender-ref ref="console" />
		</Root>
                <logger name="org.squashtest.ta.plugin.db" level="trace"/>
	</Loggers>
</Configuration>